###################################################################################################
#### Configuration CloudWatch pour AWS Elastic Beanstalk
#### Active les logs CloudWatch et crée les métriques custom pour monitoring
###################################################################################################

option_settings:
  # Configuration des logs CloudWatch
  aws:elasticbeanstalk:cloudwatch:logs:
    StreamLogs: true
    DeleteOnTerminate: false
    RetentionInDays: 7

  aws:elasticbeanstalk:cloudwatch:logs:health:
    HealthStreamingEnabled: true
    DeleteOnTerminate: false
    RetentionInDays: 7

files:
  # Configuration du CloudWatch Agent pour métriques custom
  "/opt/aws/amazon-cloudwatch-agent/etc/amazon-cloudwatch-agent.json":
    mode: "000644"
    owner: root
    group: root
    content: |
      {
        "metrics": {
          "namespace": "SentimentAnalysis/API",
          "metrics_collected": {
            "cpu": {
              "measurement": [
                {
                  "name": "cpu_usage_idle",
                  "rename": "CPU_IDLE",
                  "unit": "Percent"
                }
              ],
              "metrics_collection_interval": 60,
              "totalcpu": false
            },
            "disk": {
              "measurement": [
                {
                  "name": "used_percent",
                  "rename": "DISK_USED",
                  "unit": "Percent"
                }
              ],
              "metrics_collection_interval": 60,
              "resources": [
                "*"
              ]
            },
            "mem": {
              "measurement": [
                {
                  "name": "mem_used_percent",
                  "rename": "MEM_USED",
                  "unit": "Percent"
                }
              ],
              "metrics_collection_interval": 60
            }
          }
        },
        "logs": {
          "logs_collected": {
            "files": {
              "collect_list": [
                {
                  "file_path": "/var/log/eb-docker/containers/eb-current-app/*.log",
                  "log_group_name": "/aws/elasticbeanstalk/sentiment-api/application",
                  "log_stream_name": "{instance_id}-application",
                  "timezone": "UTC"
                }
              ]
            }
          }
        }
      }

commands:
  01_start_cloudwatch_agent:
    command: |
      # Installer et démarrer le CloudWatch Agent
      if ! command -v amazon-cloudwatch-agent-ctl &> /dev/null; then
        echo "CloudWatch Agent déjà installé"
      fi
      amazon-cloudwatch-agent-ctl \
        -a fetch-config \
        -m ec2 \
        -s \
        -c file:/opt/aws/amazon-cloudwatch-agent/etc/amazon-cloudwatch-agent.json || true